FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/fluidA";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 325.65;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 333.15;
    }
    outlet
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;;
    }
    fluidA_to_solid
    {
        type            compressible::turbulentTemperatureCoupledBaffleMixed;
        value           $internalField;
        Tnbr            T;
        kappaMethod     fluidThermo;
    }
}


